{
  "name": "BookSafe",
  "version": "1.0.0",
  "description": "BookSafe is an application that safely and unintrusively stores accounts and passwords.",
  "keywords": [
    "password",
    "manager",
    "accounts",
    "security",
    "book",
    "booksafe"
  ],
  "author": "David Abhishek O'Regan (https://horizonzz.com)",
  "license": "Custom - LICENSE.txt",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "build": {
    "appId": "com.horizonzz.booksafe",
    "productName": "BookSafe",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "preload.js",
      "LICENSE.txt",
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/lockicon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "src/lockicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/lockicon.ico",
      "uninstallerIcon": "src/lockicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BookSafe",
      "license": "LICENSE.txt",
      "artifactName": "BookSafe_v1_Setup.exe"
    }
  }
}